@model IEnumerable<Farma24.Produto>

@{
    ViewBag.Title = "Index";
}

<h1 style="text-align: center"><span style="color: #297a6d; border: solid;"><b>CATÁLOGO</b></span></h1>

<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <a href='@Url.Action("Details", "Produtoes", new { id = item.codBarras })'>
                <div class="col-lg-4 col-sm-6 portfolio-item container texto" style="margin: 30px 0px">
                    <div class="card h-100">
                        <img class="card-img-top" src='@Url.Content(item.imagem)' style="width: 100%; height:200px" />
                        <div class="card-body" style="padding: 2px 16px">
                            <h4 class="card-title text-center bold" style="color: #297a6d;">
                                <b>@Html.DisplayFor(modelItem => item.nome)</b>
                            </h4>
                            <div class="card-text">
                                <p><b>Categoria: </b>@Html.DisplayFor(modelItem => item.categoria)</p>
                                <p><b>Preço: </b>@Html.DisplayFor(modelItem => item.preco)</p>
                                <p><b>Descrição: </b>@Html.DisplayFor(modelItem => item.descricao)</p>
                            </div>
                        </div>
                    </div>
                </div>
            </a>
        }
    </div>
    <a href='@Url.Action("Create", "Produtoes")' class="button">
        Novo Produto
    </a>
</div>