@using Farma24.Models
@model IEnumerable<Farma24.Models.Encomenda>

@{
    ViewBag.Title = "Index";
}

<h1 style="text-align: center"><span style="color: #297a6d; border: solid;"><b>LISTA DE ENCOMENDAS</b></span></h1>
<div class=container>
    <table class="table table-hover">
        <tr style="border: none">
            <th>
                @Html.DisplayNameFor(model => model.estado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.inicio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Morada1.cidade)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr style="border: none">
                <td>
                    @Html.DisplayFor(modelItem => item.estado)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.inicio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Morada1.cidade)
                </td>
            </tr>
        }

    </table>
</div>